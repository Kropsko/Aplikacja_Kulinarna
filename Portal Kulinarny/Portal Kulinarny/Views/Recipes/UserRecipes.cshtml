@model IEnumerable<Portal_Kulinarny.Models.Recipe>

<h3>Lista twoich przepisów</h3>

<p>
    @Html.ActionLink("Stwórz nowy przepis!", "Create")
</p><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreparationTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AverageGrade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreparationTime)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" alt="image" width="120" height="120" />
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageGrade)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.RecipeId }) <span>|</span> 
                @Html.ActionLink("Edytuj", "Edit", new { id = item.RecipeId }) <span>|</span>
                @Html.ActionLink("Usuń", "Delete", new { id = item.RecipeId })
                
            </td>
        </tr>
    }

</table>
